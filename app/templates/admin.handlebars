<div class='row'>
  <div class='col-lg-2'>
  {{# link-to "productNew" }} Create New Product! {{/ link-to }}
    <h4>All Products</h4>
     <ul class='list-unstyled'>
      {{# each }}
      {{# if this.name }}
      <li> {{# link-to "productEdit" this }}
        {{ name }} <br> {{ format-money price }} <br>
         <img {{ bind-attr src=avatar }} width="50px", height="50px;" class='thumbnail col-lg-16' />
         {{/ link-to }}
        <button {{ action 'deleteProduct' this }}>Delete this product</button>
      </li>
      <br>
      <br>
      {{/ if }}
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-10'>
   {{ outlet }}
  </div>
</div>

<hr>
<h4> All Orders </h4>
<p>{{# link-to "manageOrders" class="btn btn-info btn-sm" }}Manage{{/ link-to }}</p>